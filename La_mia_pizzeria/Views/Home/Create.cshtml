﻿<div class="container">
    <div class="row">
        <div class="col"><h1>Crea Pizza</h1></div>
    </div>
    <div class="row">
        <div class="col">
            <form onsubmit="creaPizza(event)" method="post">
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input id="PizzaName" type="text" class="d-block w-100" />
                </div>
                <div class="mb-3">
                    <strong>Immagine:</strong>
                    <input id="PizzaImg" type="text" class="d-block w-100 is-invalid" />
                </div>
                <div class="mb-3">
                    <strong>Descrizione:</strong>
                    <input id="PizzaDescription" type="text" class="d-block w-100 is-invalid" />
                </div>
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input id="PizzaPrice" type="text" class="d-block w-100 is-invalid" />
                </div>
                <div class="mb-3">
                    <input type="submit" class="btn btn-success" value="Crea" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    function creaPizza(evt) {
        evt.preventDefault();
        var name = document.getElementById('PizzaName').value;
        var img = document.getElementById('PizzaImg').value;
        var description = document.getElementById('PizzaDescription').value;
        var price = document.getElementById('PizzaPrice').value;

        axios.post('/api/PizzaWebApi/CreatePizza', {
            _name: name,
            _img: img,
            _description: description,
            _price: price

        }, { header: { 'Content-Type': 'application/json' }})
       .then(function (response) {
            console.log(response);
       })
       .catch(function (error) {
            console.log(error);
       });
    }
</script>